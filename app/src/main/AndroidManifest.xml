<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stevennl.tastysnake">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".TastySnakeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.test.BluetoothTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.test.DrawableGridTestActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.test.SensorTestActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.game.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.test.PacketTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.test.DBTestActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".controller.test.DialogTestActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>